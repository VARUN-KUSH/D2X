{
  "name": "twitter_threat",
  "displayName": "Strafanzeiger",
  "version": "0.0.1",
  "description": "extension to combat onilne harassment on Twitter/X",
  "author": "varun",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "plasmo": "0.89.3",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "host_permissions": [
      "<all_urls>",
      "https://api.openai.com/",
      "https://www.timeapi.io",
      "https://x.com/*"
    ],
    "permissions": [
      "sidePanel",
      "activeTab",
      "tabs",
      "scripting",
      "storage",
      "unlimitedStorage",
      "offscreen",
      "downloads"
    ],
    "action": {
      "default_title": "Click to open panel"
    },
    "side_panel": {
      "default_path": "sidepanel.html"
    },
    "web_accessible_resources": [
      {
        "resources": [
          "tabs/Anzeigen_neu_generieren.html",
          "tabs/Uber_Strafanzeiger.html"
        ],
        "matches": [
          "<all_urls>"
        ]
      }
    ],
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self'"
    }
  }
}
